//=========== ST7789屏幕端连线方式===== Begin==/
屏幕端		ESP32C3		ESP8266 (esp01_201)模块
GND		GND			GND
VCC		3.3V			VCC

BL(BLC)		GPIO10			IO12
CS		GPIO7			IO15
DC		GPIO6			IO4
RES		GPIO11			IO2
SDA(MOSI)	GPIO3			IO13
SCL（SCK）	GPIO2			IO14

===========================================

屏幕端		ESP8266 NodeMCU ESP-12
Display VCC		3.3V
Display GND		GND
Display LED		3.3V
Display SCK		D5
Display SDI/MOSI		D7
Display DC (RS/AO)		D3
Display RESET		D4
Display CS			D8
//=========== End======================/

#include <Adafruit_GFX.h>
#include <Adafruit_ST7735.h>
#include <SPI.h>
// ESP8266EX  ESP01_201款白板 的ST7735的测试
#define TFT_BL         12
#define TFT_CS         15
#define TFT_DC         4
#define TFT_RST        2
#define TFT_MOSI       13  // SDA
#define TFT_SCLK       14  // SCL
Adafruit_ST7735 tft = Adafruit_ST7735(TFT_CS, TFT_DC, TFT_MOSI, TFT_SCLK, TFT_RST);
